#library "TAUNT"

#include "zcommon.acs"

#define ALL_OF_IT 0x7FFFFFFF
#define PLAYER_BASE_TID 1000
#define HIDER_IDENTIFIER 6

script "HNS_Taunt" (int hTaunt, int sTaunt) net
{
    if(PlayerClass(PlayerNumber()) < HIDER_IDENTIFIER) 
    {
        PlaySound(PlayerNumber(), hiderStringToTaunt(hTaunt), 6);
		
		switch(PlayerClass(PlayerNumber())){
			case 1:
				ACS_NamedExecute("returnVanishing", 0, 0, 0, 0);
			break;
			case 2:
				ACS_NamedExecute("returnLowVanishing", 0, 0, 0, 0);
			break;
			case 3:
				ACS_NamedExecute("returnMedVanishing", 0, 0, 0, 0);
			break;
			case 4:
				ACS_NamedExecute("returnLowVanishing", 0, 0, 0, 0);
			break;
			case 5:
				ACS_NamedExecute("returnMedVanishing", 0, 0, 0, 0);
			break;
			case 6:
				ACS_NamedExecute("returnLowVanishing", 0, 0, 0, 0);
			break;
		}
		Delay(100);
    }
    else
    {
        PlaySound(PlayerNumber(), seekerStringToTaunt(sTaunt), 6);
		Delay(50);
    }
}

function int hiderStringToTaunt(int taunt) {
    switch (taunt) {
    case 1:
        return "NyxTaunt";
    default:
        break;
    }
    return "UNKNOWN";
}

function int seekerStringToTaunt(int taunt) {
    switch (taunt) {
    case 1:
        return "CalebTaunt";
    case 2:
        return "DukeTaunt";
	case 3:
        return "ZedekTaunt";
	case 3:
        return "VisorTaunt";
		
    default:
        break;
    }
    return "UNKNOWN";
}

Script "returnLowVanishing" (void)
{
	GiveInventory("lowVanishingPool", 15);
}

Script "returnMedVanishing" (void)
{
	GiveInventory("medVanishingPool", 15);
}

Script "returnVanishing" (void)
{
	GiveInventory("Vanishing", 15);
}